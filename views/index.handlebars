  <form method="POST" action="/">
    <div>
      <center>
        <h1>你想對誰說幹話？</h1>
      </center>
    </div>
    <div class="row">
      {{#each occupation}}
        <div class="col-6 col-md-4">
          <div class="card" style="width: 18rem;">
            <img src="{{this.image}}"
              class="card-img-top" height="220" width="250">
            <div class="card-body">
              <p class="card-text">
                <input type="radio" id="{{this.occupation}}" value="{{this.occupation}}" name="occupation"
                  {{#setChecked options.occupation '{{this.occupation}}' }} checked {{/setChecked}}>
                <label for="{{this.occupation}}">{{this.job}}</label>
              </p>
            </div>
          </div>
        </div>
      {{/each}}


